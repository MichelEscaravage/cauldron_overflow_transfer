{% extends 'styleBase.html.twig' %}

{% block body %}
    <div class="formContainer">
        <h1>Edit Comment</h1>

        <a href="{{ path('app_job_show', {'slug': job.slug}) }}" class="back-button"><button>Back</button></a> <!-- Back button -->

        <form class="form" method="POST" action="{{ path('update_comment', {'id': comment.id}) }}">
            <div class="formInput">
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" value="{{ comment.title }}">
            </div>
            <div class="formInput">
                <label for="description">Description:</label><br>
                <textarea id="description" name="description" rows="20" cols="70">{{ comment.description }}</textarea><br><br>
            </div>
            <button class="submitButton" type="submit">Save Changes</button>
        </form>
    </div>


{% endblock %}
